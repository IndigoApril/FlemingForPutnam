<meta name="twitter:card" content="summary"><!-- required -->
<meta name="twitter:site" content="@@flemingforputnam"><!-- required -->
<meta name="twitter:title" content="@meta_title"><!-- required -->
<meta name="twitter:description" content="@meta_description"><!-- optional -->
<meta name="twitter:image" content="@page_thumbnail"><!-- optional -->
<meta name="twitter:image:alt" content="Image text description"><!-- optional -->
*@