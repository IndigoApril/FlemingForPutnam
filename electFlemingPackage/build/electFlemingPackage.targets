<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <ElectFlemingAssetsFilePath>$(MSBuildThisFileDirectory)..\wwwroot\**\*.*</ElectFlemingAssetsFilePath>
    <ElectFlemingViewsFilePath>$(MSBuildThisFileDirectory)..\Views\**\*.*</ElectFlemingViewsFilePath>
  </PropertyGroup>

  <Target Name="CopyElectFlemingAssets" BeforeTargets="Build">
    <ItemGroup>
      <ElectFlemingAssetFiles Include="$(ElectFlemingAssetsFilePath)" />
    </ItemGroup>
    <Message Text="Copying ElectFleming Asset files: $(ElectFlemingAssetFilesPath) - #@(ElectFlemingAssetFiles->Count()) files"  Importance="high" />
    <Copy
        SourceFiles="@(ElectFlemingAssetFiles)"
        DestinationFiles="@(ElectFlemingAssetFiles->'$(MSBuildProjectDirectory)\wwwroot\%(RecursiveDir)%(Filename)%(Extension)')"
        SkipUnchangedFiles="true" />
  </Target>

  <Target Name="CopyElectFlemingViews" BeforeTargets="Build">
    <ItemGroup>
      <ElectFlemingViewsFiles Include="$(ElectFlemingViewsFilePath)" />
    </ItemGroup>
    <Message Text="Copying ElectFleming Views files: $(ElectFlemingViewsFilesPath) - #@(ElectFlemingViewsFiles->Count()) files"  Importance="high" />
    <Copy
      SourceFiles="@(ElectFlemingViewsFiles)"
      DestinationFiles="@(ElectFlemingViewsFiles->'$(MSBuildProjectDirectory)\Views\%(RecursiveDir)%(Filename)%(Extension)')"
      SkipUnchangedFiles="true" />
  </Target>
  
</Project>